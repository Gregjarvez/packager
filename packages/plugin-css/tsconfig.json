{
  "exclude": ["node_modules", "**/__tests__/*", "dist"],
  "compilerOptions": {
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "lib": ["WebWorker", "ES5", "ES6", "ES2017", "DOM"],
    "target": "ES6",
    "moduleResolution": "Node",
    "typeRoots": ["../types"],
    "module": "ES6",
    "outDir": "./.dist",
    "strict": true,
    "esModuleInterop": true
  }
}
