{
  "exclude": ["node_modules", "**/__tests__/*", "dist"],
  "compilerOptions": {
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "lib": ["WebWorker", "DOM", "ES5", "ES2015", "ES2017"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "typeRoots": ["../types"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  }
}
