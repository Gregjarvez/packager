{
    "exclude": ["node_modules", "**/__tests__/*", "dist"],
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "packager/core": ["core/index.ts"],
            "packager/core/*": ["core/*"],
            "packager/shared/*": ["shared/*"],
            "packager/setup": ["setup/index.ts"],
            "packager/setup/*": ["setup/*"],
            "packager/exceptions": ["exceptions/index.ts"],
            "packager/exceptions/*": ["exceptions/*"],
            "packager/transformers": ["transformers/index.ts"],
            "packager/transformers/*": ["transformers/*"],
            "packager/transpilers": ["transpilers/index.ts"],
            "packager/transpilers/*": ["transpilers/*"],
            "packager/resolvers": ["resolvers/index.ts"],
            "packager/resolvers/*": ["resolvers/*"],
            "packager/loaders": ["loaders/index.ts"],
            "packager/loaders/*": ["loaders*"],
            "packager/types": ["../types/index.d.ts"],
            "packager/types/*": ["../types/*"]
        },
        "allowSyntheticDefaultImports": true,
        "lib": ["WebWorker", "ES5", "ES6", "ES2017", "DOM"],
        "target": "ES6",
        "moduleResolution": "Node",
        "typeRoots": ["../types"],
        "module": "ES6",
        // "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true
    }
}
