{
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "packager/core": ["src/core/index.ts"],
            "packager/core/*": ["src/core/*"],
            "packager/shared/*": ["src/shared/*"],
            "packager/setup": ["src/setup/index.ts"],
            "packager/setup/*": ["src/setup/*"],
            "packager/exceptions": ["src/exceptions/index.ts"],
            "packager/exceptions/*": ["src/exceptions/*"],
            "packager/transformers": ["src/transformers/index.ts"],
            "packager/transformers/*": ["src/transformers/*"],
            "packager/transpilers": ["src/transpilers/index.ts"],
            "packager/transpilers/*": ["src/transpilers/*"],
            "packager/resolvers": ["src/resolvers/index.ts"],
            "packager/resolvers/*": ["src/resolvers/*"],
            "packager/loaders": ["src/loaders/index.ts"],
            "packager/loaders/*": ["src/loaders*"],
            "packager/types/*": ["src/types/*"]
        },
        "lib": ["WebWorker", "DOM", "ES5", "ScriptHost"],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "downlevelIteration": true
    }
}
